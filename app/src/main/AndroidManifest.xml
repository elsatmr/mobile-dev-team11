<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.northeastern.team11">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Team11"
        tools:targetApi="31">
        <activity
            android:name=".MainSlurpActivity"
            android:exported="false" />
        <activity
            android:name=".SendStickerActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".AllStickersActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".SignUpActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".StickersMainActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".AboutActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".AtYourServiceActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StickerScreen"
            android:screenOrientation="portrait" />
    </application>

</manifest>